@model ApplicationCore.Models.ExpendRequestModel

@{
    ViewData["Title"] = "Add Expenditure";
}

<div>
    <form asp-action="AddExpenditure">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="UserId">UserId</label>
            <input asp-for="UserId" class="form-control" name="userid" value="@Model.UserId" readonly>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Amount">Amount</label>
            <input asp-for="Amount" class="form-control" name="amount">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" name="description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExpDate">ExpDate</label>
            <input type="Date" asp-for="ExpDate" class="form-control" name="expdate">
            <span asp-validation-for="ExpDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Remarks">Remarks</label>
            <input asp-for="Remarks" class="form-control" name="remarks">
            <span asp-validation-for="Remarks" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>